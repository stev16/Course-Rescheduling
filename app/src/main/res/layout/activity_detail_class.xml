<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detailOfClass">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/secondText">


                <Button
                    android:id="@+id/backBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Back"
                    android:textAllCaps="false"
                    app:layout_constraintStart_toStartOf="@+id/cardView2"
                    app:layout_constraintTop_toBottomOf="@+id/cardView2" />

                <Button
                    android:id="@+id/updateBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Update"
                    android:textAllCaps="false"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toBottomOf="@+id/backBtn"
                    app:layout_constraintEnd_toEndOf="@+id/cardView2"
                    app:layout_constraintTop_toTopOf="@+id/backBtn" />


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cardView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/text_bg"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:text="Subject Name"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Subject Code"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="@+id/textView2"
                        app:layout_constraintTop_toBottomOf="@+id/newSubjectName" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Subject Venue"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="@+id/textView3"
                        app:layout_constraintTop_toBottomOf="@+id/textView3" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="16dp"
                        android:text="Subject Time"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/textView14"
                        app:layout_constraintTop_toBottomOf="@+id/textView16" />

                    <TextView
                        android:id="@+id/newSubjectName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:text="subjectName"
                        android:textAlignment="gravity"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/textView2"
                        app:layout_constraintTop_toTopOf="@+id/textView2" />

                    <TextView
                        android:id="@+id/newSubCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="subjectCode"
                        app:layout_constraintStart_toStartOf="@+id/newSubjectName"
                        app:layout_constraintTop_toTopOf="@+id/textView3" />

                    <TextView
                        android:id="@+id/newSubVenue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="subjectVenue"
                        app:layout_constraintStart_toStartOf="@+id/newSubCode"
                        app:layout_constraintTop_toTopOf="@+id/textView4" />

                    <TextView
                        android:id="@+id/newSubTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="subjectTime"
                        app:layout_constraintStart_toStartOf="@+id/newSubVenue"
                        app:layout_constraintTop_toTopOf="@+id/textView5" />

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Class Type"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="@+id/textView4"
                        app:layout_constraintTop_toBottomOf="@+id/textView4" />

                    <TextView
                        android:id="@+id/detailClassType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ClassType"
                        app:layout_constraintStart_toStartOf="@+id/newSubVenue"
                        app:layout_constraintTop_toTopOf="@+id/textView14" />

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Subject Day"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="@+id/textView14"
                        app:layout_constraintTop_toBottomOf="@+id/textView14" />

                    <TextView
                        android:id="@+id/newSubDay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        app:layout_constraintStart_toStartOf="@+id/detailClassType"
                        app:layout_constraintTop_toTopOf="@+id/textView16" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <EditText
                    android:id="@+id/noOfStudentEditText"
                    android:layout_width="40dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="8dp"
                    android:ems="10"
                    android:hint="0"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColorHint="#757575"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@+id/textView12"
                    app:layout_constraintStart_toEndOf="@+id/textView12"
                    app:layout_constraintTop_toTopOf="@+id/textView12"
                    tools:ignore="TouchTargetSizeCheck"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:textSize="14dp"
                    android:text="Number of student :"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/backBtn"
                    app:layout_constraintTop_toBottomOf="@+id/backBtn" />

                <Button
                    android:id="@+id/okBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:minHeight="48dp"
                    android:textSize="14dp"
                    android:text="Generate Class"
                    android:textAllCaps="false"
                    app:layout_constraintBottom_toBottomOf="@+id/noOfStudentEditText"
                    app:layout_constraintEnd_toEndOf="@+id/updateBtn"
                    app:layout_constraintStart_toEndOf="@+id/noOfStudentEditText"
                    app:layout_constraintTop_toTopOf="@+id/noOfStudentEditText"
                    tools:ignore="TouchTargetSizeCheck" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="New Class Room    :"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    app:layout_constraintEnd_toEndOf="@+id/textView12"
                    app:layout_constraintStart_toStartOf="@+id/textView12"
                    app:layout_constraintTop_toBottomOf="@+id/okBtn" />

                <Spinner
                    android:id="@+id/classSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="ClassSpinner"
                    android:contextClickable="false"
                    android:minHeight="48dp"
                    android:text="New Class Room"
                    app:layout_constraintBottom_toBottomOf="@+id/textView7"
                    app:layout_constraintEnd_toEndOf="@+id/okBtn"
                    app:layout_constraintStart_toStartOf="@+id/noOfStudentEditText"
                    app:layout_constraintTop_toTopOf="@+id/textView7" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="Day                            :"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    app:layout_constraintStart_toStartOf="@+id/textView7"
                    app:layout_constraintTop_toBottomOf="@+id/classSpinner" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Time                          :"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/textView13"
                    app:layout_constraintTop_toBottomOf="@+id/RGroup" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/timeView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/RGroup"
                    app:layout_constraintStart_toStartOf="@+id/textView8"
                    app:layout_constraintTop_toBottomOf="@+id/textView8" />


                <com.whygraphics.multilineradiogroup.MultiLineRadioGroup
                    android:id="@+id/RGroup"
                    android:layout_width="0dp"
                    android:layout_height="101dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/text_bg"
                    app:default_button="button_2"
                    android:visibility="invisible"
                    app:layout_constraintEnd_toEndOf="@+id/okBtn"
                    app:layout_constraintStart_toStartOf="@+id/textView13"
                    app:layout_constraintTop_toBottomOf="@+id/textView13"
                    app:max_in_row="3">

                    <RadioButton
                        android:id="@+id/saturday_RB"
                        android:layout_width="237dp"
                        android:layout_height="159dp"
                        android:layout_marginStart="8dp"
                        android:buttonTint="#DD5353"
                        android:text="Monday"
                        android:textColorHighlight="#DD5353"
                        android:textColorLink="#DD5353"
                        app:layout_constraintBottom_toBottomOf="@+id/textView13" />

                    <RadioButton
                        android:id="@+id/sunday_RB"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:buttonTint="#DD5353"
                        android:text="Tuesday"
                        android:textColorHighlight="#DD5353"
                        android:textColorLink="#DD5353"
                        app:layout_constraintStart_toEndOf="@+id/saturday_RB"
                        app:layout_constraintTop_toTopOf="@+id/saturday_RB" />

                    <RadioButton
                        android:id="@+id/wednesday_RB"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:buttonTint="#DD5353"
                        android:text="Wednesday"
                        android:textColorHighlight="#DD5353"
                        android:textColorLink="#DD5353"
                        app:layout_constraintStart_toStartOf="@+id/saturday_RB"
                        app:layout_constraintTop_toBottomOf="@+id/saturday_RB" />

                    <RadioButton
                        android:id="@+id/thursday_RB"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:buttonTint="#DD5353"
                        android:text="Thursday"
                        android:textColorHighlight="#DD5353"
                        android:textColorLink="#DD5353"
                        app:layout_constraintStart_toEndOf="@+id/saturday_RB"
                        app:layout_constraintTop_toTopOf="@+id/wednesday_RB" />

                    <RadioButton
                        android:id="@+id/friday_RB"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:buttonTint="#DD5353"
                        android:text="Friday"
                        android:textColorHighlight="#DD5353"
                        android:textColorLink="#DD5353"
                        app:layout_constraintEnd_toEndOf="@+id/thursday_RB"
                        app:layout_constraintStart_toStartOf="@+id/wednesday_RB"
                        app:layout_constraintTop_toBottomOf="@+id/wednesday_RB" />

                </com.whygraphics.multilineradiogroup.MultiLineRadioGroup>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>